<idea-plugin>
    <id>com.illuzor.afo</id>
    <name>Android Folder Opener</name>
    <vendor email="illuzor@gmail.com" url="https://illuzor.pro">Artem Zanin</vendor>

    <description><![CDATA[
    Plugin for open android folders in explorer/finder
    ]]></description>

    <depends>org.jetbrains.android</depends>

    <!-- Android Studio 3.2+ -->
    <idea-version since-build="181"/>

    <actions>
        <group id="afo" text="Android Folder Opener" description="Android Folder Opener" popup="true">

            <action id="com.illuzor.afo.actions.OpenFolder"
                    class="com.illuzor.afo.actions.OpenReportsAction"
                    text="Open Folder">
            </action>

            <add-to-group group-id="AndroidToolsGroup" anchor="first"/>
        </group>
    </actions>
</idea-plugin>